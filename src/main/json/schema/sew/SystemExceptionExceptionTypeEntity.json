{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "SystemExceptionEntityAppProfileEntity MongoDB Collection",
  "title": "SystemExceptionEntityAppProfileEntity MongoDB Title",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Generated surrogate key."
    },
	"exceptionCode": {
		  "description": "Unique identification code for the Exception Resolution Step",
		  "type":"string"
	  },
    "exceptionType": {
		"description": "Type of Error belongs to",
		"type":"string"
    },
	"exceptionTitle": {
		"description": "Type of Error belongs to",
		"type":"string"
	},
	"exceptionSubType": {
		  "description": "Type of Error belongs to",
		  "type":"string"
	  },
	"description": {
		  "description": "Type of Error belongs to",
		  "type":"string"
	  },
    "createdByApplication": {
		"description": "Application Details",
		"$ref": "ApplicationDetails.json"
    },
    "createdDate": {
		"description": "Onboarded Component Exception date",
		"type": "string",
		"format": "date-time"
		},
	"createdUser": {
		  "description": "Component Onboarded created User",
		  "type":"string"
	  },
	"mappedResolutionCodes": {
		  "type": "array",
		  "description": "Mapped ResolutionCode",
		  "items":{
			  "type": "string"
		  }
	  },
	"usedByApplications": {
		"description": "list of applications using this error codes",
		"$ref": "ApplicationDetails.json"
	  },
	"auditHistory": {
		"description": "keep track of all the audit history.",
		"$ref": "AuditHistoryDetails.json"
	}
  },
  "required": [ "errorCode", "errorType" ]
}